```
git clone git@github.com:Stephane-D/SGDK.git && cd SGDK
docker build -t sgdk:$(git describe --abbrev=0 --tags) .
docker image ls 
cd sample/sonic && rm -rf out
docker run --rm -v "$PWD":/src -u $(id -u):$(id -g) sgdk:$(git describe --abbrev=0 --tags)
```
